<style>

:root {
    --primary-color: #fff; /* try #212121 also for dark mode */
    --background-color: #212121;
    --font: sans-serif;
}

/* Outer Layer with the timeline border */
.outer {
    border-left: 2px solid var(--main-child-bg);
}

/* Card container */
.card {
    position: relative;
    margin: 0 0 20px 20px;
    padding: 10px;
    background: var(--main-child-bg);
    color: var(--muted-fg);
    border-radius: 8px;
    max-width: 400px;
}

.card { 
    display: block;
    border-bottom: 0;

    transition: 200ms ease-in-out;
}

.card:focus { 
    outline-offset: 0.25rem;
}

.card:hover { 
    color: inherit;
    transform: translateY(-0.25rem);
}

/* Title of the card */
h2 {
    color: var(--accent-fg);
    position: relative;
}

/* Timeline dot  */
h2::before {
    content: "";
    position: absolute;
    width: 1rem;
    height: 1rem;
    background: var(--accent-fg);
    border-radius: 999px;
    left: -39px;
    border: 3px solid var(--accent-fg);
}

</style>
